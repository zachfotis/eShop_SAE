<div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6">
  <div class="flex flex-1 justify-between sm:hidden">
    <a
      <% if(current-1>1) { %> href="/admin/all-products?page=<%= current-1 %>" <% } else { %> href="/admin/all-products" <% } %>
      class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"
      >Previous</a
    >
    <a
      <% if(Number(current)+1>=pages) { %> href="/admin/all-products?page=<%= pages %>" <% } else { %> href="/admin/all-products?page=<%=Number(current) + 1 %>" <% } %> 
      class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"
      >Next</a
    >
  </div>
  <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
    <div>
      <p class="text-sm text-gray-700">
        Showing
        <span class="font-medium"><%= current * perPage - (perPage-1) %></span>
        to
        <span class="font-medium"><%= (current * perPage ) <=count ? current * perPage : count %></span>
        of
        <span class="font-medium"><%= count %></span>
        results
      </p>
    </div>
    <div>
      <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
        <a <% if(current-1
          >1) { %> href="/admin/all-products?page=<%= current-1 %>" <% } else { %> href="/admin/all-products" <% } %>
          class="relative inline-flex items-center rounded-l-md border border-gray-300 bg-white px-2 py-2 text-sm
          font-medium text-gray-500 hover:bg-gray-50 focus:z-20" >
          <span class="sr-only">Previous</span>
          <svg
            class="h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
        <!-- Current: "z-10 bg-indigo-50 border-indigo-500 text-indigo-600", Default: "bg-white border-gray-300 text-gray-500 hover:bg-gray-50" -->
        <% if(Number(pages) <= 7) { %>
          <% for(let i=1; i<=pages; i++) { %>
            <a
              href="/admin/all-products?page=<%= i %>"
              aria-current="page"
              <% if(Number(current) === i) {%>
              class="relative focus:z-20 inline-flex items-center border px-4 py-2 text-sm font-medium z-10 bg-indigo-50 border-indigo-500 text-indigo-600 "
              <% } else { %>
              class="relative focus:z-20 inline-flex items-center border px-4 py-2 text-sm font-medium bg-white border-gray-300 text-gray-500 hover:bg-gray-50"
              <% } %>
              ><%= i %></a
            >
          <% } %>
          <% } else {%>
            <% for(let i=((Number(pages)-2>Number(current)+2) ? Number(current) : (Number(current) + Number(pages)-Number(current)-5)); i<=((Number(pages)-2>Number(current)+2) ? Number(current)+2 : (Number(current) + Number(pages)-Number(current)-3)); i++) { %>
              <a
              href="/admin/all-products?page=<%= i %>"
              aria-current="page"
              <% if(Number(current) === i) {%>
              class="relative focus:z-20 inline-flex items-center border px-4 py-2 text-sm font-medium z-10 bg-indigo-50 border-indigo-500 text-indigo-600 "
              <% } else { %>
              class="relative focus:z-20 inline-flex items-center border px-4 py-2 text-sm font-medium bg-white border-gray-300 text-gray-500 hover:bg-gray-50"
              <% } %>
              ><%= i %></a
            >
            <% } %>

            <% if(Number(pages-5) > Number(current)) { %>
              <span
              class="relative inline-flex items-center border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700"
              >...</span
              >
            <% } %>

            <% for(let i=Number(pages)-2; i<=Number(pages); i++) { %>
              <a
              href="/admin/all-products?page=<%= i %>"
              aria-current="page"
              <% if(Number(current) === i) {%>
              class="relative focus:z-20 inline-flex items-center border px-4 py-2 text-sm font-medium z-10 bg-indigo-50 border-indigo-500 text-indigo-600 "
              <% } else { %>
              class="relative focus:z-20 inline-flex items-center border px-4 py-2 text-sm font-medium bg-white border-gray-300 text-gray-500 hover:bg-gray-50"
              <% } %>
              ><%= i %></a
            >
            <% } %>
            <% } %>

        <a <% if(Number(current)+1
          >=pages) { %> href="/admin/all-products?page=<%= pages %>" <% } else { %> href="/admin/all-products?page=<%=
          Number(current) + 1 %>" <% } %> class="relative inline-flex items-center rounded-r-md border border-gray-300
          bg-white px-2 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-20" >
          <span class="sr-only">Next</span>
          <svg
            class="h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      </nav>
    </div>
  </div>
</div>
