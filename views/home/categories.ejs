<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs', {title:'Products'}) %>
    <link rel="stylesheet" href="/css/categories.css" />
  </head>

  <body>
    <!-- Navbar -->
    <%- include('../partials/nav.ejs') %> 
    <%- (typeof message !== 'undefined') ? (include('../partials/message.ejs',
    {message})) : '' %>

    <section class="section-categories">
      <nav aria-label="Breadcrumb" class="max-w-full">
        <ol role="list" class="flex items-center space-x-4">
          <li>
            <div class="flex items-center">
              <a href="/" class="mr-4 text-sm font-medium text-gray-900"> Home </a>
              <svg
                viewBox="0 0 6 20"
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
                class="h-5 w-auto text-gray-300"
              >
                <path d="M4.878 4.34H3.551L.27 16.532h1.327l3.281-12.19z" fill="currentColor" />
              </svg>
            </div>
          </li>

          <li class="text-sm">
            <a href="/categories#" aria-current="page" class="font-medium text-gray-500 hover:text-gray-600">
              Categories
            </a>
          </li>
        </ol>
      </nav>
      <div class="categories-container">
        <% categories.forEach(element => { %>
        <a
          class="category-card shadow-md rounded-lg hover:shadow-lg"
          href="/categories/<%= element.category.toLowerCase() %> "
        >
          <img src="<%= element.image %>" class="product-thumb" alt="category image" />
          <h1 class="category-title"><%= element.category %></h1>
        </a>
        <% }) %>
      </div>
    </section>
    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
